<?xml version="1.0" encoding="ISO-8859-1"?>

<web-app xmlns="http://java.sun.com/xml/ns/j2ee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd"
    version="2.4">

    <display-name>Template</display-name>
    <description>
      An empty project to use as a template for your own ones
    </description>

	<!-- Context attributes to be used throughout the application -->
	<context-param>
		<param-name>dao</param-name>
		<param-value>IDENTIFICATIVO_DELL_IMPLEMENTAZIONE</param-value>
	</context-param>
	
    <!-- Define servlets that are included in the application -->
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>controller.Login</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/loginServlet</url-pattern>
    </servlet-mapping>
    
    
    <servlet>
        <servlet-name>RegistrazioneUtente</servlet-name>
        <servlet-class>controller.RegistrazioneUtente</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RegistrazioneUtente</servlet-name>
        <url-pattern>/registrazioneUtente</url-pattern>
    </servlet-mapping>
    
    
    <servlet>
        <servlet-name>CreazioneStanza</servlet-name>
        <servlet-class>controller.CreazioneStanza</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CreazioneStanza</servlet-name>
        <url-pattern>/creazioneStanza</url-pattern>
    </servlet-mapping>
    
    
    <servlet>
        <servlet-name>VisualizzaCatalogo</servlet-name>
        <servlet-class>controller.VisualizzaCatalogo</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>VisualizzaCatalogo</servlet-name>
        <url-pattern>/visualizzaCatalogo</url-pattern>
    </servlet-mapping>
    
    
    <servlet>
        <servlet-name>RichiestaTitolo</servlet-name>
        <servlet-class>controller.RichiestaTitolo</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RichiestaTitolo</servlet-name>
        <url-pattern>/richiestaTitolo</url-pattern>
    </servlet-mapping>
    
    
    <servlet>
        <servlet-name>GestioneInventario</servlet-name>
        <servlet-class>controller.GestioneInventario</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>GestioneInventario</servlet-name>
        <url-pattern>/inventario</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>IscrizioneStanza</servlet-name>
        <servlet-class>controller.IscrizioneStanza</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>IscrizioneStanza</servlet-name>
        <url-pattern>/iscrizioneStanza</url-pattern>
    </servlet-mapping>
    
    
    <servlet>
        <servlet-name>GestioneUtenti</servlet-name>
        <servlet-class>controller.GestioneUtenti</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>GestioneUtenti</servlet-name>
        <url-pattern>/gestioneUtenti</url-pattern>
    </servlet-mapping>
    
    
     <servlet>
        <servlet-name>Conversazioni</servlet-name>
        <servlet-class>controller.Conversazioni</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Conversazioni</servlet-name>
        <url-pattern>/conversazioni</url-pattern>
    </servlet-mapping>
    
     <servlet>
        <servlet-name>ConversazioniGruppo</servlet-name>
        <servlet-class>controller.ConversazioniGruppo</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ConversazioniGruppo</servlet-name>
        <url-pattern>/conversazioniGruppo</url-pattern>
    </servlet-mapping>

	<!-- Welcome pages -->
	<!-- pleonastico: tomcat "tenta" in automatico le index.html e index.jsp -->
	
	<welcome-file-list>
		<welcome-file>index.jsp</welcome-file>
	</welcome-file-list>
		
	<!-- Handle exceptions and errors -->
	
	<error-page>
		<error-code>404</error-code>
		<location>/errors/notfound.html</location>
	</error-page>

	<error-page>
		<exception-type>javax.servlet.ServletException</exception-type>
		<location>/errors/failure.jsp</location>
	</error-page>
	 
</web-app>
